---
import Typography from '../ui/Typography.astro';
import MouseScroll from '../icons/MouseScrollIcon.astro';
import MailIcon from '../icons/MailIcon.astro';
import LinkedInIcon from '../icons/LinkedInIcon.astro';
import GithubIcon from '../icons/GitHubIcon.astro';
import SocialPill from '../SocialPill.astro';
import { me } from '@/data/me';
import { EnvService } from '@/services/env.service';

const GITHUB_URL = EnvService.getContact().github || '/';
const LINKEDIN_URL = EnvService.getContact().linkedin || '/';
const CONTACT_EMAIL = EnvService.getContact().email || 'example@gmail.com';
---

<div class='space-y-8 pt-8 md:pt-12'>
  <div class='flex flex-col items-center justify-between gap-10 lg:flex-row lg:gap-12 xl:gap-16'>
    <div class='flex-1 space-y-2'>
      <div>
        <Typography as='span' size='big-4' class='font-bold text-yellow-500'> Hello ðŸ‘‹ </Typography>
        <Typography as='p' size='big-4' class='font-bold'>I'm {me.name}.</Typography>
      </div>
      <div>
        <Typography as='p' size='lg' class='text-md md:text-[18px] lg:text-[20px] text-slate-300'>
          A <b class='text-primary'>Software Engineer </b>with over 2 years of experience. I focus
          on using best practices to create <b class='text-primary'>scalable</b> and <b
            class='text-primary'>maintainable</b
          > applications, always aiming for efficiency and functionality in every project.
        </Typography>
      </div>
      <div class='pt-6 flex items-center justify-start gap-3 flex-wrap'>
        <SocialPill href={GITHUB_URL}>
          <GithubIcon />
          Github
        </SocialPill>
        <SocialPill href={LINKEDIN_URL}>
          <LinkedInIcon size='size-6' />
          Linkedin
        </SocialPill>
        <SocialPill href={`mailto:${CONTACT_EMAIL}`}>
          <MailIcon size='size-6' />
          Email
        </SocialPill>
      </div>
    </div>
    <div class='overflow-hidden rounded-full'>
      <img src='/images/hero-avatar.webp' alt='My Avatar' width={325} height={325} />
    </div>
  </div>
  <div class='flex items-center justify-center'>
    <MouseScroll class:list='h-16 w-auto' />
  </div>
</div>
