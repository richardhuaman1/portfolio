---
import type { Icon } from '@/utilities/types';
import Typography from './ui/Typography.astro';

interface Props {
  title: string;
  icon: Icon;
  animation: 'wiggle' | 'spin';
}

const { icon: Icon, title, animation, ...restProps } = Astro.props;
---

<div
  {...restProps}
  tabindex='0'
  class='rounded-xl h-[95px] w-[95px] group focus:ring-gray-300 ring-2 ring-transparent'
>
  <div class='h-[65%] flex items-center justify-center p-2'>
    <Icon
      height={43}
      widht={43}
      class:list={[
        'w-[43px] h-auto',
        { 'group-hover:animate-spin': animation === 'spin' },
        { 'group-hover:animate-wiggle': animation === 'wiggle' },
      ]}
    />
  </div>
  <div class='h-[35%] flex items-center justify-center p-2'>
    <Typography
      as='p'
      size='sm'
      class:list='text-gray-300 group-hover:scale-105 group-hover:text-white text-center leading-4 ease-in-out transition-all'
      >{title}
    </Typography>
  </div>
</div>
