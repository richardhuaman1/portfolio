---
import Container from './Container.astro';
import Typography from './ui/Typography.astro';
import type { Icon } from '../utilities/types';

type BaseProps =
  | {
      title: string;
      icon: Icon;
    }
  | {
      title?: string;
    };

type Props = BaseProps & {
  id: string;
  disablePadding?: boolean;
};

const { id, disablePadding = false, ...restProps } = Astro.props;
---

<section id={id} class={disablePadding ? '' : 'py-[72px] lg:py-20'}>
  <Container>
    {
      restProps.title && 'icon' in restProps && (
        <div class='flex items-center justify-start gap-3 mb-5'>
          <restProps.icon class:list='size-9 text-white' />
          <Typography as='h2' size='3xl' class='font-medium'>
            {restProps.title}
          </Typography>
        </div>
      )
    }
    <slot />
  </Container>
</section>
