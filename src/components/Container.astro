---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
  class?: string;
  style?: string;
}>;

const { as: Tag = 'div', class: className, style, ...restProps } = Astro.props;
---

<Tag
  {...restProps}
  class:list={`mx-auto md:max-w-3xl lg:max-w-screen-lg px-4 md:px-8 ${className || ''}`}
  style={style}
>
  <slot />
</Tag>
