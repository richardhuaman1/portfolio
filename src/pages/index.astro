---
import CodeIcon from '@/components/icons/CodeIcon.astro';
import BriefcaseIcon from '@/components/icons/BriefcaseIcon.astro';
import Layout from '../layouts/Layout.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import WorkExperienceSection from '@/components/sections/WorkExperienceSection.astro';
import ProjectsSection from '@/components/sections/ProjectsSection.astro';
import SkillsSection from '@/components/sections/SkillsSection.astro';
import { SECTIONS } from '@/utilities/constants';
import SkillIcon from '@/components/icons/SkillIcon.astro';
import { me } from '@/data/me';
import { EnvService } from '@/services/env.service';
---

<Layout title={me.name} description={me.about} canonical={EnvService.getClient()}>
  <h1 hidden aria-hidden='true'>{me.name}</h1>
  <SectionContainer id={SECTIONS.home} disablePadding>
    <HeroSection />
  </SectionContainer>
  <SectionContainer id={SECTIONS.skills} title='Technical Skills' icon={SkillIcon}>
    <SkillsSection />
  </SectionContainer>
  <SectionContainer id={SECTIONS.experience} title='Work Experience' icon={BriefcaseIcon}>
    <WorkExperienceSection />
  </SectionContainer>
  <SectionContainer id={SECTIONS.projects} title='Projects' icon={CodeIcon}>
    <ProjectsSection />
  </SectionContainer>
</Layout>
